/* pages/customer/detail/detail.wxss */
.container {
  padding-bottom: 180rpx; /* 为底部按钮留出空间 */
}

/* 头部操作按钮 */
.header-actions {
  display: flex;
}

.action-btn {
  font-size: 28rpx;
  color: #666;
  margin-left: 30rpx;
}

.action-btn.delete {
  color: #e64340;
}

/* 信息项样式 */
.info-item {
  display: flex;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  width: 160rpx;
  color: #999;
  font-size: 28rpx;
}

.info-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
  word-break: break-all;
}

.info-value.with-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.action-text {
  color: #576b95;
  font-size: 26rpx;
  margin-left: 20rpx;
}

/* 切换标签样式 */
.tab-container {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tab-item.active {
  color: #1890ff;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

.tab-text {
  font-size: 28rpx;
  color: inherit;
}

.tab-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.tab-item.active .tab-count {
  color: #1890ff;
}

/* 拜访记录样式 */
.visit-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
}

.visit-item:last-child {
  border-bottom: none;
}

.visit-time {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.visit-content {
  display: flex;
  flex-direction: column;
}

.visit-summary {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.visit-photos {
  display: flex;
  flex-wrap: wrap;
}

.visit-photo {
  width: 160rpx;
  height: 160rpx;
  margin: 0 20rpx 20rpx 0;
  border-radius: 8rpx;
}

.visit-arrow {
  align-self: flex-end;
  color: #ccc;
  font-size: 24rpx;
}

/* 打卡记录样式 */
.checkin-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
}

.checkin-item:last-child {
  border-bottom: none;
}

.checkin-time {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.checkin-content {
  display: flex;
  flex-direction: column;
}

.checkin-address {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.checkin-remark {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.checkin-photos {
  display: flex;
  flex-wrap: wrap;
}

.checkin-photo {
  width: 160rpx;
  height: 160rpx;
  margin: 0 20rpx 20rpx 0;
  border-radius: 8rpx;
}

/* 底部操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.action-buttons .btn {
  flex: 1;
  margin: 0 10rpx;
}

/* 地图弹窗 */
.map-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.map-modal.show {
  opacity: 1;
  pointer-events: auto;
}

.map-container {
  width: 100%;
  height: 600rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.map-actions {
  display: flex;
  width: 100%;
}

.map-actions .btn {
  flex: 1;
  margin: 0 10rpx;
}