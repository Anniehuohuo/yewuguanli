/* pages/customer/detail/detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 客户卡片 */
.customer-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.customer-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.customer-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #007aff, #5ac8fa);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 25rpx;
}

.avatar-text {
  font-size: 40rpx;
  font-weight: bold;
  color: white;
}

.customer-basic {
  flex: 1;
}

.customer-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.customer-category {
  margin-left: 15rpx;
  padding: 6rpx 15rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  color: white;
}

.category-A {
  background: #ff3b30;
}

.category-B {
  background: #ff9500;
}

.category-C {
  background: #34c759;
}

.customer-company {
  font-size: 28rpx;
  color: #666;
}

.customer-actions {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  border-radius: 15rpx;
  background: #f8f9fa;
}

.call-btn {
  background: #34c759;
}

.message-btn {
  background: #007aff;
}

.edit-btn {
  background: #ff9500;
}

.delete-btn {
  background: #ff3b30;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: white;
}

/* 详细信息卡片 */
.detail-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.detail-list {
  
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  text-align: right;
  word-break: break-all;
}

/* 订单卡片 */
.orders-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.new-order-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #007aff;
  border-radius: 20rpx;
}

.btn-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.btn-text {
  font-size: 24rpx;
  color: white;
}

.orders-list {
  
}

.order-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-item:last-child {
  border-bottom: none;
}

.order-info {
  flex: 1;
}

.order-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.order-meta {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.order-amount {
  font-size: 28rpx;
  color: #ff3b30;
  font-weight: bold;
  margin-right: 20rpx;
}

.order-status {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: white;
}

.status-pending {
  background: #ff9500;
}

.status-confirmed {
  background: #007aff;
}

.status-completed {
  background: #34c759;
}

.status-cancelled {
  background: #8e8e93;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-arrow {
  margin-left: 20rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.3;
}

/* 空状态 */
.empty-orders {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 25rpx;
}

.empty-action {
  display: inline-block;
  padding: 15rpx 30rpx;
  background: #007aff;
  color: white;
  border-radius: 20rpx;
  font-size: 26rpx;
}

/* 删除确认弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 0 40rpx;
  max-width: 600rpx;
  width: 100%;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.modal-message {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  padding: 25rpx 0;
  border-radius: 15rpx;
  text-align: center;
  font-size: 28rpx;
}

.cancel-btn {
  background: #f8f9fa;
  color: #666;
}

.confirm-btn {
  background: #ff3b30;
  color: white;
}