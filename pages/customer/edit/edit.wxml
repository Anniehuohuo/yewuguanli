<!--pages/customer/edit/edit.wxml-->
<view class="container">
  <form bindsubmit="submitForm">
    <view class="card">
      <view class="card-header">
        <text>{{isEdit ? '编辑客户' : '新增客户'}}</text>
      </view>
      <view class="card-body">
        <view class="form-group">
          <text class="form-label">客户名称 <text class="required">*</text></text>
          <input class="form-control" name="name" placeholder="请输入客户名称" value="{{customer.name}}" maxlength="50" />
        </view>
        
        <view class="form-group">
          <text class="form-label">联系人</text>
          <input class="form-control" name="contact" placeholder="请输入联系人姓名" value="{{customer.contact}}" maxlength="30" />
        </view>
        
        <view class="form-group">
          <text class="form-label">电话</text>
          <input class="form-control" name="phone" placeholder="请输入联系电话" value="{{customer.phone}}" type="number" maxlength="20" />
        </view>
        
        <view class="form-group">
          <text class="form-label">地址</text>
          <view class="address-input">
            <input class="form-control" name="address" placeholder="请输入详细地址" value="{{customer.address}}" maxlength="100" />
            <view class="location-btn" bindtap="chooseLocation">
              <text class="location-icon">📍</text>
            </view>
          </view>
        </view>
        
        <view class="form-group">
          <text class="form-label">备注</text>
          <textarea class="form-textarea" name="remark" placeholder="请输入备注信息" value="{{customer.remark}}" maxlength="-1"></textarea>
        </view>
      </view>
      <view class="card-footer">
        <button class="btn btn-default" bindtap="cancelEdit">取消</button>
        <button class="btn btn-primary" form-type="submit">保存</button>
      </view>
    </view>
  </form>
</view>