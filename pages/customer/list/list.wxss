/* pages/customer/list/list.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  gap: 20rpx;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: white;
  border-radius: 25rpx;
  padding: 0 30rpx;
  height: 80rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.filter-btn {
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 筛选面板 */
.filter-panel {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.filter-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.filter-option {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  background: #f8f9fa;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
}

.filter-option.active {
  background: #007aff;
  color: white;
  border-color: #007aff;
}

/* 客户列表 */
.customer-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.customer-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.customer-item:last-child {
  border-bottom: none;
}

.customer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #007aff, #5ac8fa);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.avatar-text {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
}

.customer-info {
  flex: 1;
}

.customer-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.customer-category {
  margin-left: 15rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: white;
}

.category-A {
  background: #ff3b30;
}

.category-B {
  background: #ff9500;
}

.category-C {
  background: #34c759;
}

.customer-company {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.customer-phone {
  font-size: 24rpx;
  color: #999;
}

.customer-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.call-btn {
  background: #34c759;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-action {
  display: inline-block;
  padding: 20rpx 40rpx;
  background: #007aff;
  color: white;
  border-radius: 25rpx;
  font-size: 28rpx;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 30rpx;
  bottom: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: #007aff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 122, 255, 0.3);
  z-index: 999;
}

.add-icon {
  width: 48rpx;
  height: 48rpx;
}