/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 今日统计 */
.stats-section {
  background: linear-gradient(135deg, #007aff 0%, #5ac8fa 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  color: white;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-between;
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-number {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 快捷操作 */
.quick-actions-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.quick-actions-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.quick-action-item {
  width: 48%;
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 15rpx;
  background: #f8f9fa;
  margin-bottom: 15rpx;
}

.quick-action-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.quick-action-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 最近拜访和拜访计划 */
.recent-visits-section,
.upcoming-plans-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-more {
  font-size: 26rpx;
  color: #007aff;
}

.visit-list,
.plan-list {
  border-radius: 15rpx;
  overflow: hidden;
}

.visit-item,
.plan-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fafafa;
}

.visit-item:last-child,
.plan-item:last-child {
  border-bottom: none;
}

.visit-info,
.plan-info {
  flex: 1;
}

.visit-customer,
.plan-customer {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.visit-purpose,
.plan-purpose {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.visit-date,
.plan-time {
  font-size: 24rpx;
  color: #999;
}

.visit-arrow {
  font-size: 30rpx;
  color: #ccc;
}

.plan-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: white;
}

.plan-status.pending {
  background: #ff9500;
}

.plan-status.completed {
  background: #34c759;
}

.plan-status.cancelled {
  background: #ff3b30;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}