/* pages/business/list/list.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.search-input-wrapper {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  background: white;
  border-radius: 25rpx;
  padding: 0 30rpx;
  border: 1rpx solid #e9ecef;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  padding: 25rpx 0;
  font-size: 28rpx;
  color: #333;
}

.clear-btn {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 15rpx;
}

.clear-btn image {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

.filter-btn {
  width: 80rpx;
  height: 80rpx;
  background: white;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #e9ecef;
}

.filter-btn image {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.7;
}

/* 筛选面板 */
.filter-panel {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #e9ecef;
}

.filter-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.filter-option {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 15rpx 25rpx;
  background: #f8f9fa;
  border-radius: 25rpx;
  border: 1rpx solid #e9ecef;
}

.filter-option.active {
  background: #007aff20;
  border-color: #007aff;
}

.filter-label {
  font-size: 26rpx;
  color: #333;
}

.filter-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

/* 业务列表 */
.business-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.3;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  display: block;
}

.empty-action {
  padding: 20rpx 40rpx;
  background: #007aff;
  color: white;
  border-radius: 25rpx;
  font-size: 28rpx;
  display: inline-block;
}

.business-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1rpx solid #e9ecef;
  position: relative;
}

.business-item:active {
  background: #f8f9fa;
}

.business-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.business-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.business-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-btn {
  background: #007aff20;
}

.delete-btn {
  background: #ff3b3020;
}

.action-btn image {
  width: 32rpx;
  height: 32rpx;
}

.business-info {
  margin-bottom: 25rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  width: 100rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.info-value.amount {
  color: #ff3b30;
  font-weight: bold;
}

.business-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.business-status {
  flex: 1;
}

.status-tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.business-priority {
  margin-left: 20rpx;
}

.priority-tag {
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: white;
}

.priority-high {
  background: #ff3b30;
}

.priority-medium {
  background: #ff9500;
}

.priority-low {
  background: #34c759;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: #007aff;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
  z-index: 100;
}

.fab:active {
  transform: scale(0.95);
}

.fab image {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) invert(1);
}

/* 响应式调整 */
@media (max-width: 375px) {
  .container {
    padding: 15rpx;
  }
  
  .business-item {
    padding: 25rpx;
  }
  
  .business-title {
    font-size: 30rpx;
  }
  
  .action-btn {
    width: 55rpx;
    height: 55rpx;
  }
  
  .action-btn image {
    width: 28rpx;
    height: 28rpx;
  }
}