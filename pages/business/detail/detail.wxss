/* pages/business/detail/detail.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
}

.business-detail {
  background-color: #fff;
}

/* 商家图片轮播 */
.business-images {
  width: 100%;
  height: 400rpx;
}

.business-images swiper-item {
  width: 100%;
  height: 100%;
}

.business-images image {
  width: 100%;
  height: 100%;
}

/* 商家基本信息 */
.business-info {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 20rpx solid #f5f5f5;
}

.business-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.business-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.business-rating {
  display: flex;
  align-items: center;
  background-color: #ff6b35;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.rating-score {
  font-weight: bold;
  margin-right: 4rpx;
}

.business-category {
  margin-bottom: 20rpx;
}

.business-category text {
  background-color: #e8f4fd;
  color: #1890ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.business-description {
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 联系信息 */
.contact-info {
  background-color: #fff;
  border-bottom: 20rpx solid #f5f5f5;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 32rpx;
}

.contact-content {
  flex: 1;
}

.contact-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.contact-value {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.contact-arrow {
  color: #ccc;
  font-size: 28rpx;
}

/* 菜单/服务 */
.menu-section {
  background-color: #fff;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.menu-list {
  /* 菜单列表样式 */
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-info {
  flex: 1;
}

.menu-name {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.menu-description {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.menu-price {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: bold;
}