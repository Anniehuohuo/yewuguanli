/* 拜访信息 */
.visit-info {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.item-value {
  font-size: 30rpx;
  color: #333;
  word-break: break-all;
}

.tag {
  display: inline-block;
  background-color: #f0f0f0;
  color: #666;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

/* 照片 */
.photos-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.photos-container {
  display: flex;
  flex-wrap: wrap;
}

.photo-item {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  border-radius: 8rpx;
}

.photo-item:nth-child(3n) {
  margin-right: 0;
}

.photo-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 底部操作按钮 */
.footer-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.footer-buttons button {
  flex: 1;
  margin: 0 10rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
}

.btn-primary {
  background-color: #007aff;
  color: #fff;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #333;
}

/* 地图弹窗 */
.map-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.map-container {
  width: 90%;
  height: 80%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.map-container map {
  flex: 1;
  width: 100%;
}

.map-buttons {
  display: flex;
  padding: 20rpx;
}

.map-buttons button {
  flex: 1;
  margin: 0 10rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
}