/* pages/visit/checkin/checkin.wxss */
.container {
  padding-bottom: 180rpx; /* 为底部按钮留出空间 */
}

/* 客户选择器 */
.customer-selector {
  height: 80rpx;
  padding: 0 24rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.placeholder {
  color: #999;
}

.selector-arrow {
  color: #ccc;
  font-size: 24rpx;
}

/* 信息项样式 */
.info-item {
  display: flex;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  width: 160rpx;
  color: #999;
  font-size: 28rpx;
}

.info-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
  word-break: break-all;
}

/* 位置信息 */
.refresh-btn {
  font-size: 28rpx;
  color: #576b95;
}

.location-info {
  margin-bottom: 20rpx;
}

.location-status {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.location-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.location-text {
  font-size: 28rpx;
  color: #666;
}

.location-status.success .location-text {
  color: #09bb07;
}

.location-status.error .location-text {
  color: #e64340;
}

.location-address {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-left: 42rpx;
}

.map-container {
  width: 100%;
  height: 400rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 照片上传 */
.upload-container {
  display: flex;
  flex-wrap: wrap;
}

.upload-item {
  width: 200rpx;
  height: 200rpx;
  margin: 0 20rpx 20rpx 0;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.upload-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.upload-item-delete {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-add {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.upload-add-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.upload-add-text {
  font-size: 24rpx;
}

/* 表单操作按钮 */
.form-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.form-actions .btn {
  flex: 1;
  margin: 0 10rpx;
}

.btn[disabled] {
  background-color: #ddd !important;
  color: #999 !important;
}

/* 附近客户提示 */
.nearby-hint {
  margin-top: 10rpx;
  padding: 10rpx 0;
  text-align: center;
}

.nearby-hint text {
  font-size: 24rpx;
  color: #576b95;
}

/* 客户选择器弹窗 */
.customer-selector-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  width: 90%;
  max-height: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  max-height: 600rpx;
  overflow-y: auto;
}

.customer-list {
  padding: 20rpx 0;
}

.customer-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.customer-item:hover {
  background-color: #f8f9fa;
}

.customer-item:last-child {
  border-bottom: none;
}

.customer-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.customer-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.customer-address {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.customer-distance {
  margin-left: 20rpx;
  padding: 8rpx 16rpx;
  background-color: #f0f9ff;
  border-radius: 20rpx;
  border: 1rpx solid #e1f5fe;
}

.customer-distance text {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 500;
}

.empty-customers {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  display: block;
  margin-bottom: 10rpx;
  color: #666;
}

.empty-desc {
  font-size: 28rpx;
  display: block;
  color: #999;
}

.modal-footer {
  display: flex;
  justify-content: center;
  padding: 20rpx 30rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  gap: 20rpx;
}

.modal-footer .btn {
  flex: 1;
  margin: 0;
}