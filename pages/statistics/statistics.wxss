/* pages/statistics/statistics.wxss */
.container {
  background: linear-gradient(135deg, #f0f8ff 0%, #e6f7ff 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
  padding: 40rpx 30rpx 20rpx;
  background: white;
  border-bottom: 1px solid #eee;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 时间筛选 */
.filter-card {
  background: rgba(255, 255, 255, 0.8);
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(24, 144, 255, 0.1);
  box-shadow: 0 8rpx 32rpx rgba(24, 144, 255, 0.1);
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.filter-item {
  padding: 15rpx 25rpx;
  background: rgba(230, 247, 255, 0.6);
  border-radius: 25rpx;
  border: 1rpx solid rgba(24, 144, 255, 0.2);
  transition: all 0.3s ease;
}

.filter-item.active {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.filter-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 自定义日期选择 */
.date-selector {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1px solid #eee;
}

.date-range {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.date-item {
  flex: 1;
}

.date-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.date-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  border: 1px solid #ddd;
}

.date-text {
  font-size: 28rpx;
  color: #333;
}

.date-icon {
  font-size: 28rpx;
}

.date-separator {
  font-size: 26rpx;
  color: #666;
  margin-top: 30rpx;
}

.search-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #007aff;
  color: white;
  border-radius: 8rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.search-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 数据看板 */
.dashboard-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin: 20rpx;
}

.dashboard-card {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  padding: 25rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(24, 144, 255, 0.1);
  box-shadow: 0 8rpx 32rpx rgba(24, 144, 255, 0.1);
  transition: all 0.3s ease;
}

.dashboard-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.2);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  font-size: 40rpx;
}

.card-trend {
  font-size: 24rpx;
  color: #52c41a;
  background: #f6ffed;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.card-content {
  text-align: left;
}

.card-value {
  font-size: 42rpx;
  font-weight: 600;
  color: #1890ff;
  line-height: 1;
  margin-bottom: 8rpx;
}

.card-label {
  font-size: 26rpx;
  color: #666;
  line-height: 1;
  font-weight: 500;
}

.customer-card .card-icon {
  color: #1890ff;
}

.visit-card .card-icon {
  color: #52c41a;
}

.checkin-card .card-icon {
  color: #fa8c16;
}

.photo-card .card-icon {
  color: #eb2f96;
}